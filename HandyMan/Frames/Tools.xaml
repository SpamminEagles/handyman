<Page x:Class="HandyMan.Frames.Tools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HandyMan.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tools">

    <Grid>
        <Label x:Name="label" Content="Tools" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="63" Width="104" FontSize="36"/>
        <Grid HorizontalAlignment="Left" Height="114" Margin="14,93,0,0" VerticalAlignment="Top" Width="218" Background="#FFBFD1EC">
            <Label Content="Latin to Cyrillic converter" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="145"/>
            <RadioButton x:Name="LatToCyrRBOn" Content="On" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Checked="LatToCyrRBOn_Checked" Loaded="LatToCyrRBOn_Loaded"/>
            <RadioButton x:Name="LatToCyrRBOff" Content="Off" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Checked="LatToCyrRBOff_Checked" Loaded="LatToCyrRBOff_Loaded"/>
        </Grid>

    </Grid>
</Page>
